<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="#fff" />

    <!-- we define border color and thick -->
    <stroke
        android:width="2dp"
        android:color="#5b8bc7" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="@dimen/linearlayout_bg_padding"
        android:left="@dimen/linearlayout_bg_padding"
        android:right="@dimen/linearlayout_bg_padding"
        android:top="@dimen/linearlayout_bg_padding" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="5dp" />

</shape>