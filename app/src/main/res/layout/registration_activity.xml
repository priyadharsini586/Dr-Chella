<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_bg"
    android:orientation="vertical"
    android:id="@+id/sclRegisterMain">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registration"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/txtMan"
        android:gravity="center">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_star"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allfield"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txtMan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/edtt_text_padding"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user"
            android:layout_gravity="center"
            android:padding="@dimen/icon_padding"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/icon_padding">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInputName"
            android:layout_gravity="center"
            android:gravity="center"
            app:errorTextAppearance="@style/error_appearance">
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/Name"
               style="@style/App_EditTextStyle"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                />
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/edtt_text_padding"
        android:paddingRight="@dimen/edtt_text_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_gender"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputGender"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:errorTextAppearance="@style/error_appearance">
                   <RadioGroup
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="3"
                       android:orientation="horizontal"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:id="@+id/radioSexGroup">
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1.1"
                           android:text="@string/english_male"
                           android:layout_gravity="center"
                           android:textColor="@color/colorPrimary"
                           android:textSize="@dimen/gender_text"
                           android:id="@+id/radioMale"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1.1"
                           android:text="@string/english_female"
                           android:textColor="@color/colorPrimary"
                           android:textSize="@dimen/gender_text"
                           android:id="@+id/radioFemale"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.8"
                           android:text="@string/english_transgender"
                           android:textColor="@color/colorPrimary"
                           android:textSize="@dimen/gender_text"
                           android:id="@+id/radioTrans"/>

                   </RadioGroup>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/edtt_text_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_age"
            android:layout_gravity="center"
            android:padding="@dimen/icon_padding"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:gravity="center"
            android:paddingTop="@dimen/icon_padding"
            android:paddingBottom="@dimen/icon_padding">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInputAge"
                android:layout_gravity="center"
                android:gravity="center"
                app:errorTextAppearance="@style/error_appearance">
                <EditText
                    android:id="@+id/inputAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/age"
                    style="@style/App_EditTextStyle"
                    android:maxLength="2"
                    android:background="@android:color/transparent"/>
            </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/edtt_text_padding"
        android:paddingRight="@dimen/edtt_text_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_city"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"/></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:paddingTop="@dimen/icon_padding"
                android:paddingBottom="@dimen/icon_padding">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputCity"
                    android:layout_gravity="center"
                    app:errorTextAppearance="@style/error_appearance">
                    <EditText android:id="@+id/edtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/city"
                        style="@style/App_EditTextStyle"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/edtt_text_padding"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mobile"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/icon_padding"
                android:paddingBottom="@dimen/icon_padding">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInputMobile"
                    android:layout_gravity="center"
                    app:errorTextAppearance="@style/error_appearance">
                    <EditText android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/mobile"
                        style="@style/App_EditTextStyle"
                        android:maxLength="10"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/edtt_text_padding"
        android:paddingRight="@dimen/edtt_text_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_email"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/icon_padding"
                android:paddingBottom="@dimen/icon_padding">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInpute_mail"
                    android:layout_gravity="center"
                    app:errorTextAppearance="@style/error_appearance">
                    <EditText android:id="@+id/edtmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/e_mail"
                        style="@style/App_EditTextStyle"
                        android:background="@android:color/transparent"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/edtt_text_padding">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/register"
            android:background="@drawable/register_button_bg"
            android:textColor="@android:color/white"
            android:textStyle="bold"
           android:id="@+id/btnReg"/>
    </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
</ScrollView>
